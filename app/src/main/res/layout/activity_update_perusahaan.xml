<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdatePerusahaanActivity">

    <ImageView
        android:id="@+id/logo_perusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_user_foreground"/>

    <EditText
        android:id="@+id/edit_text_nama_perusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Perusahaan"
        android:layout_margin="8dp"
        android:inputType="text">
    </EditText>

    <EditText
        android:id="@+id/edit_text_pemilik_perusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Pemilik Perusahaan"
        android:inputType="text">
    </EditText>

    <EditText
        android:id="@+id/edit_text_alamat_perusahaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Alamat Perusahaan"
        android:inputType="textMultiLine">
    </EditText>


</LinearLayout>