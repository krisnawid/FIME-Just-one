<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_judul_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Judul Laporan"
            android:layout_alignParentStart="true">
        </TextView>

        <TextView
            android:id="@+id/text_keterangan_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/just_pengeluaran_input"
            android:text="Keterangan Laporan"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1">
        </TextView>

        <TextView
            android:id="@+id/text_tanggal_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_judul_input"
            android:text="DD/MM/YYYY"
            android:textSize="15dp"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:ellipsize="end">
        </TextView>

        <TextView
            android:id="@+id/just_pemasukan_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#0A6136"
            android:layout_below="@+id/text_tanggal_input"
            android:text="Pemasukan">
        </TextView>

        <TextView
            android:id="@+id/text_pemasukan_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A6136"
            android:text="1"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_below="@id/text_tanggal_input">
        </TextView>

        <TextView
            android:id="@+id/just_pengeluaran_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F50000"
            android:textSize="20dp"
            android:layout_below="@+id/just_pemasukan_input"
            android:text="Pengeluaran">
        </TextView>

        <TextView
            android:id="@+id/text_pengeluaran_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F50000"
            android:text="1"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_pemasukan_input">
        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>